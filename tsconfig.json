{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "strict": true,
      "noImplicitAny": true,              
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": "./",
      "outDir": "lib",
    },
    "rules": {
      "semicolon": true
    }
  }
  