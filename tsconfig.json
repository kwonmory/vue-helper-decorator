{
    "compilerOptions": {
      "target": "es5",
      "module": "es6",
      "declaration": true,
      "strict": true,
      "noImplicitAny": true,              
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "dist/",
      "sourceMap": true,
    },
    "include": [
      "src"
    ],
    "rules": {
      "semicolon": true
    }
  }
  